{
	"name": "cnc-mission-stringids",
	"displayName": "Cattle and Crops Mission StringIds",
	"description": "Sets new stringIds per condition",
	"version": "0.0.3",
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/cattle-and-crops/tutorial-stringids-vscode-extension.git"
	},
	"publisher": "JakobTischler",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cnc-mission-stringids.createTutorialStringIds",
		"onCommand:cnc-mission-stringids.getStringContents"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cnc-mission-stringids.createTutorialStringIds",
				"title": "Create Tutorial StringIds",
				"category": "Cattle and Crops",
				"when": "resourceExtname == .xml || editorLangId == xml"
			},
			{
				"command": "cnc-mission-stringids.getStringContents",
				"title": "Get String Contents",
				"category": "Cattle and Crops",
				"when": "resourceExtname == .xml || editorLangId == xml"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "cnc-mission-stringids.createTutorialStringIds",
					"group": "Cattle and Crops",
					"when": "resourceExtname == .xml || editorLangId == xml"
				},
				{
					"command": "cnc-mission-stringids.getStringContents",
					"group": "Cattle and Crops",
					"when": "resourceExtname == .xml || editorLangId == xml"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"pack": "vsce package"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"fast-xml-parser": "3.17.1"
	}
}
